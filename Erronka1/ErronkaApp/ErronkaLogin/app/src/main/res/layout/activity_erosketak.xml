<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".ErosketakActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnProduktuak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnProduktuak" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:fontFamily="monospace"
                android:shadowColor="@color/black"
                android:text="@string/salmentak"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewErabiltzailea"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/erabiltzailea"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/erosketenTaula"
                        android:layout_width="515dp"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/darkGreyRow">

                            <TextView
                                android:id="@+id/textViewOrderId"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/orderId"

                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textViewIzena"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/name"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textViewProduktua2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:text="@string/produktua"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textViewIzena2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:text="@string/kantitatea"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textViewPrezioa"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/prezioa"

                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textViewData"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/data"

                                android:textColor="@color/white" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>