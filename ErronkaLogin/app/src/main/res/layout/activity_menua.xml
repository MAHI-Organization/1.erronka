<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Menua">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="900dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/scrollView"
        android:paddingBottom="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imgB"
                        android:layout_width="48dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="296dp"
                        android:layout_weight="1"
                        android:background="@drawable/usuario"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewSalduenak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/salduenak"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ViewFlipper
                android:id="@+id/carrusel"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

            </ViewFlipper>

            <TextView
                android:id="@+id/textViewProduktuak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/produktuak"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerProduktuak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/spinner"
                android:minHeight="48dp" />

            <LinearLayout
                android:id="@+id/linearLayoutProduktuak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>