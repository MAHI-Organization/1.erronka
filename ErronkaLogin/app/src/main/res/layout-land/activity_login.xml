<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/editTextPasahitza"
        android:layout_width="197dp"
        android:layout_height="51dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="@string/pasahitza"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextIzena"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="@string/erabiltzailea"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:counterMaxLength="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSartu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/sartu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasahitza" />

</androidx.constraintlayout.widget.ConstraintLayout>